# =============================================================================
# SalonMate Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=SalonMate API
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development  # development | staging | production

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_V1_PREFIX=/v1

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
# Local Development:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/salonmate

# Supabase (Production):
# DATABASE_URL=postgresql+asyncpg://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Supabase Connection Options:
# - Direct connection: port 5432 (for migrations)
# - Connection pooler: port 6543 (for application, recommended)
# - Transaction pooler: port 5432 with ?pgbouncer=true

# -----------------------------------------------------------------------------
# Redis (Upstash or local)
# -----------------------------------------------------------------------------
# Local Development:
REDIS_URL=redis://localhost:6379/0

# Upstash (Production):
# REDIS_URL=rediss://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# -----------------------------------------------------------------------------
# OpenAI
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_FALLBACK_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Google OAuth (for login + Business Profile API)
# -----------------------------------------------------------------------------
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Instagram / Meta (for posting)
# -----------------------------------------------------------------------------
# Create at: https://developers.facebook.com/apps
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# -----------------------------------------------------------------------------
# Kakao OAuth (optional)
# -----------------------------------------------------------------------------
# Create at: https://developers.kakao.com/console/app
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Rate Limiting (requests per minute)
# -----------------------------------------------------------------------------
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_AI=20

# -----------------------------------------------------------------------------
# Monitoring (optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
DATADOG_API_KEY=
